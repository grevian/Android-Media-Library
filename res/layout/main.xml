<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/ScanButton" android:text="Scan"></Button>
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/SearchLabel" android:layout_below="@+id/ScanButton" android:text="Search for Item:"></TextView>
<EditText android:layout_height="wrap_content" android:layout_below="@+id/SearchLabel" android:layout_width="fill_parent" android:id="@+id/SearchText"></EditText>

<ListView android:id="@+id/ResultList" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@+id/SearchText"></ListView>


</RelativeLayout>
